<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inputs">
    <%= f.label :email %><br />
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "@youremail.com"  %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-block btn-warning' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
